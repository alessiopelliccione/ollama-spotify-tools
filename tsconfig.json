{
  "compilerOptions": {
    "module": "Node16",
    "target": "es2021",
    "lib": ["es2021"],
    "moduleResolution": "node16",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["core/**/*.ts", "apps/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
